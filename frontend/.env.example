# React Frontend - Environment Configuration
# Copy this file to .env and configure your settings

# ============================================
# REQUIRED: Backend API Configuration
# ============================================
# FastAPI backend URL (development)
REACT_APP_API_URL=http://localhost:8000

# For production, change to your deployed backend:
# REACT_APP_API_URL=https://api.yourdomain.com

# ============================================
# Optional: WebSocket URL
# ============================================
# WebSocket URL (usually same as API but with ws:// or wss://)
# Development:
REACT_APP_WS_URL=ws://localhost:8000

# Production:
# REACT_APP_WS_URL=wss://api.yourdomain.com

# ============================================
# Application Settings
# ============================================
# Application name (displayed in UI)
REACT_APP_NAME=Live AI Interviewer

# Application version
REACT_APP_VERSION=1.0.0

# Environment (development, staging, production)
REACT_APP_ENV=development

# ============================================
# Feature Flags
# ============================================
# Enable dark mode by default
REACT_APP_DEFAULT_DARK_MODE=true

# Enable WebSocket (set to false to use HTTP polling)
REACT_APP_ENABLE_WEBSOCKET=true

# Enable file upload
REACT_APP_ENABLE_UPLOAD=true

# Maximum file size in MB
REACT_APP_MAX_FILE_SIZE=10

# ============================================
# UI Configuration
# ============================================
# Dashboard refresh interval (milliseconds)
REACT_APP_DASHBOARD_REFRESH_INTERVAL=10000

# WebSocket reconnect attempts
REACT_APP_WS_MAX_RETRIES=5

# WebSocket reconnect delay (milliseconds)
REACT_APP_WS_RETRY_DELAY=1000

# ============================================
# Optional: Analytics & Monitoring
# ============================================
# Google Analytics
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry DSN for error tracking
# REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# ============================================
# Optional: Third-party Services
# ============================================
# Stripe public key (if adding payment)
# REACT_APP_STRIPE_PUBLIC_KEY=pk_test_xxxxx

# Firebase config (if adding authentication)
# REACT_APP_FIREBASE_API_KEY=your_api_key
# REACT_APP_FIREBASE_AUTH_DOMAIN=your_app.firebaseapp.com
# REACT_APP_FIREBASE_PROJECT_ID=your_project_id

# ============================================
# Build Configuration
# ============================================
# Generate source maps in production (set to false for security)
GENERATE_SOURCEMAP=false

# ============================================
# Notes
# ============================================
# 1. All variables MUST start with REACT_APP_ to be accessible
# 2. Variables are embedded at BUILD time, not runtime
# 3. After changing .env, restart npm start
# 4. For production, use environment-specific values
# 5. Never commit .env to git (use .env.example as template)
